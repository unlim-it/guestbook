    xmlns:mvvm="clr-namespace:Guestbook.Silverlight.Mvvm">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <mvvm:InvertedBoolConverter x:Key="InvertedBool" />
